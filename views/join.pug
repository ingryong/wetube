extends layouts/main

block content 
    .form-container 
        form(action=routes.join, method="post")
            input(type="text", name="name", placeholder="실명" required=true)
            input(type="email", name="email", placeholder="Email" required=true)
            input(type="password", name="password", placeholder="비밀번호" required=true)
            input(type="password", name="password2", placeholder="비밀번호를 재입력해주세요" required=true)
            input(type="submit", value="회원 가입")
        include partials/socialLogin