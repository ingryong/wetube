extends layouts/main

block content 
    .form-container 
        form(action=routes.editVideo(video.id), method="post")
            input(type="text", placeholder="제목", name="title", value=video.title)
            textarea(name="description", placeholder="본문 내용 입력")=video.description
            input(type="submit", value="영상 수정완료")
        a.form-container__link.form-container__link--delete(href=`/videos${routes.deleteVideo}`) 영상 삭제하기